{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "plugins": ["unused-imports"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "no-console": "off",
    "semi": ["warn", "always"],
    "quotes": ["warn", "single"],
    "eqeqeq": ["warn", "always"]
  },
  "globals": {
    "player": false,
    "startExploreGame": false,
    "uiState": true,
    "exploreRunning": true,
    "step": false,
    "isRunning": false,
    "canvas": false,
    "lastHealCast": true,
    "HEAL_COOLDOWN": false,
    "HEAL_COST": false,
    "updateManaBar": false,
    "updateHPBar": false,
    "getPlayer": false,
    "saveGame": false,
    "showScreen": false,
    "showAlert": false,
    "showNoManaEffect": false,
    "showDamageText": false,
    "unbindInput": false,
    "saveSlotList": true,
    "createPlayer": false,
    "printPlayerName": false,
    "_e": false
  }
}
